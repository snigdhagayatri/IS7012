@page
@model OnlineVideoGamePortal.Pages.Gamers.CreateModel

@{
    ViewData["Title"] = "Create Gamer Entry";
}

    <h1>Create Gamer Entry</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GamerInfo.Name" class="control-label"></label>
                <input asp-for="GamerInfo.Name" class="form-control" />
                <span asp-validation-for="GamerInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerInfo.Age" class="control-label"></label>
                <input asp-for="GamerInfo.Age" class="form-control" />
                <span asp-validation-for="GamerInfo.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerInfo.PreferredVideoGame" class="control-label"></label>
                <input asp-for="GamerInfo.PreferredVideoGame" class="form-control" />
                <span asp-validation-for="GamerInfo.PreferredVideoGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerInfo.GamesPurchased" class="control-label"></label>
                <input asp-for="GamerInfo.GamesPurchased" class="form-control" />
                <span asp-validation-for="GamerInfo.GamesPurchased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerInfo.FavGame" class="control-label"></label>
                <input asp-for="GamerInfo.FavGame" class="form-control" />
                <span asp-validation-for="GamerInfo.FavGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerInfo.DateJoined" class="control-label"></label>
                <input asp-for="GamerInfo.DateJoined" class="form-control" />
                <span asp-validation-for="GamerInfo.DateJoined" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GamerInfo.IsActiveCustomer" /> @Html.DisplayNameFor(model => model.GamerInfo.IsActiveCustomer))
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
