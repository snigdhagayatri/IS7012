@page
@model OnlineVideoGamePortal.Pages.Purchases.CreateModel

@{
    ViewData["Title"] = "Create Purchase";
}

<h1>Create A Purchase</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Purchase.AmountPaid" class="control-label"></label>
                <input asp-for="Purchase.AmountPaid" class="form-control" />
                <span asp-validation-for="Purchase.AmountPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.ModeOfTransaction" class="control-label"></label>
                <input asp-for="Purchase.ModeOfTransaction" class="form-control" />
                <span asp-validation-for="Purchase.ModeOfTransaction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.GamerID" class="control-label"></label>
                <select asp-for="Purchase.GamerID" class="form-control" asp-items="ViewBag.ID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.VideoGameID" class="control-label"></label>
                <select asp-for="Purchase.VideoGameID" class ="form-control" asp-items="ViewBag.VideoGameID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
